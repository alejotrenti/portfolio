---
import '@fontsource/josefin-sans';

import Header from '../components/Header.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Mi nombre es Alejo, y este es mi primer portfolio como programador utilizando tecnologias y frameworks como Astro, HTML, TailWindCSS, CSS, JavaScript, etc" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body>
		<div class="absolute top-0 z-[-2] min-h-screen w-screen bg-[#000000] bg-[radial-gradient(#ffffff33_1px,#00091d_1px)] bg-[size:20px_20px]"></div>
		<Header />

	 	<slot />
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: 'Josefin Sans' ,system-ui , sans-serif;
		scroll-behavior: smooth;
	}
	body{
		display: flex;
		flex-direction: column;	
		background-color: #050505;
	}
</style>
